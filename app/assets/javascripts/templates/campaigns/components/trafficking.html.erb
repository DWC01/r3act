<div ng-controller="TrafficController">
  
  <div class="r3-page-header">
    
    <h2 class="center" ng-hide="trafficking == 'trafficked'"> 
      Trafficking
      <small>
        <br/>
        {{ campaign.name }}
      </small>
    </h2>
    
    <h2 class="center" ng-show="trafficking == 'trafficked'"> 
      Trafficked
      <small>
        <br/>
        {{ campaign.name }}
      </small>
    </h2>

  </div>

  <div ng-show="trafficking == 'untrafficked'" >
    <div class="traffic-to-media-partner-wrap md-whiteframe-z1">
      <div class="title">
        <p>
          {{ company.name }}
        </p>
      </div>
      <div class="logo-wrap">
        <img src="{{ company.listLogoUrl }}" />
      </div>
    </div>
    <div class="traffic-form-wrapper">
      <form accept-charset="UTF-8" >

               <!-- 493276581 -->
        <input type="text" ng-model="dfp.advertiser_id" 
               placeholder="advertiser id" 
               class="form-control traffic-input"/>

        <button type="submit" ng-click="traffic(dfp)" 
                class="r3-btn-primary">
          Traffic Ad Tags
        </button>
      </form>
    </div>
  </div><!-- end ngShow untrafficked -->

  <div ng-show="trafficking == 'trafficking'" class="center">  
    <h2 class="trafficking-header">
      Sending tags to DFP...
    </h2>
    <md-progress-circular 
        class="md-accent md-default-theme center md-r3-theme" 
        md-mode="indeterminate" aria-valuemin="0" aria-valuemax="100" 
        role="progressbar" 
        style="-webkit-transform: scale(1);">
          <div class="md-spinner-wrapper">
            <div class="md-inner">
              <div class="md-gap">
              </div>
              <div class="md-left">
                <div class="md-half-circle">
                </div>
              </div>
              <div class="md-right">
                <div class="md-half-circle">
                </div>
              </div>
            </div>
          </div>
    </md-progress-circular>
  </div><!-- end ngShow trafficking -->

  <div ng-show="trafficking == 'trafficked'" class="trafficked-wrapper">
    <h2> 
      The following creatives have been trafficked!
    </h2>
    <ul class="list-unstyled">
      <a class="stripe-box-list-link" target="_blank"
         href="{{creative.preview_url}}" 
         ng-repeat="creative in creatives">
        <li class="stripe-box-list-item md-whiteframe-z1">
          <div class="stripe-box-left-stripe"></div>
          <div class="stripe-box-content">
            <span class="id">
              ID:{{creative.id}}
            </span>
            <span class="name">
              {{ creative.name }} | 
            </span>
            <span class="size">
              {{creative.size.width}}x{{creative.size.height}}
            </span>
          </div>
        </li>
      </a>
    </ul>
  </div>
</div>