<section id="dashboardapp" ng-controller="MainCtrl">
  <dashboard></dashboard>

  <h1>Dashboards</h1>
  <ul id="dashboard-list">
    <li ng-repeat="dashboard in dashboards">
      <p>{{dashboard.title}}</p>
      <p>{{dashboard.category}}</p>
      <p>{{dashboard.size}}</p>
    </li>
  </ul>

    <div class="container">
      <h1 ng-show="dashboards.length">dashboards</h1>
      <table class="table table-striped" ng-show="dashboards.length">
        <thead>
          <th>Title</th>
        </thead>
        <tbody>
        <tr ng-repeat="dashboards in dashboards">
          <td ng-click="activeDashboard(dashboards)">{{dashboards.title}}</td>
          <td><button class="btn btn-danger" ng-click="delete(dashboards)">Delete</button></td>
        </tr>
        </tbody>
      </table>
      <h3 ng-if="!editing">New dashboards</h3>
      <h3 ng-if="editing">Edit dashboards</h3>
      <form ng-submit="save(dashboards)">
        <input ng-model="dashboards.title">
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
        <button ng-if="editing" class="btn btn-success" ng-click="newDashboard()">New Dashboard</button>
    </div>
