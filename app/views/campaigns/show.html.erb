<% content_for :title do %> Campaign Show <% end %>

<div>
  <%= render 'campaigns/page_menu' %>
</div>

<div class="page-content">
  
  <header ui-view>
     <h3>
       <a ui-sref="campaignHeader">
        Campaigns
       </a>
    </h3>
  </header>  

  <ul class="list-unstyled list-item-fancy-box-wrap"
      ng-repeat="ad_tag in ad_tags" >
    <a href="">
      <li class="list-item-fancy-box">
        <div class="list-item-content">
        <span class="item-count-circle">{{$index + 1 }}</span>
          {{ad_tag}}
        </div>
      </li>
    </a>
  </ul>

</div>
