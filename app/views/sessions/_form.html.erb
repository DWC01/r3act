<%= form_tag '/sign_in' do %>
  <div class="form-input">
    <%= text_field_tag :email, nil, 
      :placeholder => :email, :class => "form-control" %>
  </div>
  <div class="form-input">
    <%= password_field_tag :password, nil, 
      placeholder: :password, :class => "form-control" %>
  </div>
  <div class="center">
    <%= submit_tag "Submit", :class => "r3-btn-primary"  %>
  </div>
<% end %>