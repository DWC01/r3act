<div class='upload-creative-file-upload-wrap'>
  <form {{action 'saveAdTagCreative' on='submit'}}>    
    <div class="row">
    	<div class="input-field">
        {{input type="text"  value=creative.name name="name" 
    	    	class="validate" id="creative-name"}}
        <div class="form-field-error">
        	{{creative_errors.name}}
        </div>
        <label for="creative-name">
        	Name
        </label>
      </div>
    </div>

    <div class="row">
    	<div class="input-field">
        {{textarea value=creative.ad_tag_code id="ad-tag-textarea" class="materialize-textarea"}}
        <div class="form-field-error">
        	{{creative_errors.ad_tag_code}}
        </div>
        <label class="ad-tag-label" for="ad-tag-textarea">
        	Ad Tag Code
        </label>
      </div>
    </div>

    <div class="row">
      <div class="col s5">
      	<div class="input-field">
    	    {{input type="text" value=creative.width name="width" 
    	    	class="validate" id="creative-width"}}
    	    <div class="form-field-error">
    	    	{{creative_errors.width}}
    	    </div>
    	    <label for="creative-width">
    	    	Width
    	    </label>
    	  </div>
      </div>
     	<div class="col s2 add-ad-tag-x">
      	X
    	</div>
      <div class="col s5">    
      	<div class="input-field">
    	    {{input type="text" value=creative.height
    	    	name="height" class="validate" id="creative-height"}}
    	    <div class="form-field-error">
    	    	{{creative_errors.height}}
    	    </div>
    	    <label for="creative-height">
    	    	Height
    	    </label>
    	  </div>
      </div>
    </div>

    <div class="upload-button-wrap">
      <button type="submit" name="submit" 
      	class="waves-effect waves-light btn">
      	Save
    	</button>
    </div>
  </form> 
</div>