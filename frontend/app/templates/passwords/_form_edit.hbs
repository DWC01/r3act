<form {{action "updatePassword" on="submit"}}>
  <div class="form-input">
    {{input type="password" value=password name="password" placeholder="password" class="form-control"}}
    <div class="form-field-error">
      {{password_error}}
    </div>
  </div>
  <div class="form-input">
    {{input type="password" value=password_confirmation name="password_confirmation" placeholder="password confirmation" class="form-control"}}
    <div class="form-field-error">
      {{password_status}}
      {{confirmation_error}}
    </div>
  </div>
  <div class="center">
    <button type="submit" name="Submit" class="r3-btn-primary">
      Submit
    </button>
  </div>
</form>